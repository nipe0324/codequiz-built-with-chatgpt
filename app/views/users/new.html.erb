<section class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-8 max-w-md mx-auto">
    <h2 class="text-3xl mb-4">ユーザ登録</h2>
    <%= form_for @user do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "font-semibold" %>
        <%= form.text_field :name, class: "block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
      </div>
      <div class="mb-4">
        <%= form.label :email, class: "font-semibold" %>
        <%= form.email_field :email, class: "block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
      </div>
      <div class="mb-6">
        <%= form.label :password, class: "font-semibold" %>
        <%= form.password_field :password, class: "block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
      </div>
      <%= form.submit class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
    </form>
    <p class="mt-4 text-center">
      既にアカウントをお持ちの方は<%= link_to "こちら", sign_in_path %>
    </p>
  <% end %>
</section>
