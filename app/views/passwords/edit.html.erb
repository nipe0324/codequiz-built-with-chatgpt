<section class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-8 max-w-md mx-auto">
    <h2 class="text-3xl mb-4">パスワード変更</h2>
    <p class="mt-4">
      新しいパスワードを登録してください。
    </p>
  <%= form_for :password_reset,
        url: [@user, :password, token: @user.confirmation_token],
        html: { method: :put } do |form| %>
      <div class="mt-4 mb-6">
        <%= form.label :password, class: "font-semibold" %>
        <%= form.password_field :password, class: "block w-full px-4 py-2 mt-1 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-400 focus:border-blue-500" %>
      </div>

      <%= form.submit class: "bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700" %>
    <% end %>
  </div>
</section>
